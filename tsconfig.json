{
    "compilerOptions": {
        "target": "ES2018",
        "module": "CommonJS",
        "lib": [
            "ES2018",
            "DOM",
        ],
        "strict": true,
        "sourceMap": true,
        "noFallthroughCasesInSwitch": true,
        "exactOptionalPropertyTypes": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noPropertyAccessFromIndexSignature": true,
        "moduleResolution": "node",
        "outDir": "./dist",
        "declaration": true,
    },
    "exclude": [
        "node_modules",
    ],
    "include": [
        "src",
    ],
}